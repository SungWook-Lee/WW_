<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/rl"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/imgll"
        android:orientation="vertical" >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="140px" />

        <com.github.chrisbanes.photoview.PhotoView
            android:id="@+id/clickimg"
            android:layout_width="666px"
            android:layout_height="666px"
            android:layout_alignStart="@+id/imgll"
            android:layout_alignTop="@+id/imgll"
            android:layout_gravity="center" />
</LinearLayout>
<LinearLayout
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:layout_below="@+id/imgll"
    android:gravity="center"
    android:orientation="horizontal"
    >

    <com.skydoves.elasticviews.ElasticButton
        android:id="@+id/save"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        app:button_backgroundColor="#30354b"
        app:button_round="20"
        app:button_scale="0.7"
        app:button_duration="400"
        app:button_labelText="Capture"
        app:button_labelColor="#ffffff"
        app:button_labelSize="16"
        app:button_labelStyle="bold"/>
    <ImageView
        android:layout_width="30dp"
        android:layout_height="match_parent" />
    <com.skydoves.elasticviews.ElasticButton
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:id="@+id/back"
        app:button_backgroundColor="#30354b"
        app:button_round="20"
        app:button_scale="0.7"
        app:button_duration="400"
        app:button_labelText="Back"
        app:button_labelColor="#ffffff"
        app:button_labelSize="16"
        app:button_labelStyle="bold"
        />

</LinearLayout>
</RelativeLayout>